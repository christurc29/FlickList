<!-- <div id="titles">
  <span class="tableHeader">Title:</span>
  <span class="tableHeader">Genre:</span>
</div> -->
  <ul id="watchList">
    <% todos.forEach( el => { %>
            <li class='todoItem' data-id='<%=el._id%>' data-createdat='<%=el.createdDate%>'>
              <span class="pointer info"><i onclick="openPopup()" class="fa fa-info-circle" aria-hidden="true"></i></span>
              <span class='pointer details <%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
              <span class='pointer details <%= el.completed === true ? 'completed' : 'not'%>'><%= el.genre %></span>
              <span class='pointer del'><i class="fa fa-trash-o"></i></span>
            </li>
    <% }) %>
    </ul>
    
    <!-- Movie Description Popup-->
    <div class="popup" id="popup">
      <img id="movieImage" src="" alt="Poster for movie">
      <h2 id="movieTitle"></h2>
      <span id="movieDetailLabel">Description:</span><p id ="movieDescrip">Movie Description Here</p>
      <span id="movieDetailLabel">Genre:</span><p id="movieGenre"></p>
      <!-- <span id="movieDetailLabel">Year:</span><p id="movieYear"></p> -->
      <span id="movieDetailLabel">Rotten Tomato Rating:</span><p id="movieRTRating"></p>
      <button type="button" onclick="closePopup()">Close</button>
    </div>
    <br>
    <div id="logoutButton">
      <a id="logout" href="/logout">Logout</a>
    </div>
    
    


    <script src="js/main.js"></script>
  
</body>
</html>